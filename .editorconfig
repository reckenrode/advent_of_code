root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
max_line_length = 100
trim_trailing_whitespace = true

[*.fs]
indent_style = space
indent_size = 4
fsharp_experimental_elmish = true
fsharp_space_before_member = true
fsharp_space_before_class_constructor = true
fsharp_space_before_uppercase_invocation = true

[*.{rs,toml}]
indent_style = space
indent_size = 4

[*.{nix}]
indent_style = space
indent_size = 2

[*.{fsproj,props}]
indent_style = space
indent_size = 2

[*.sln]
indent_style = tab
